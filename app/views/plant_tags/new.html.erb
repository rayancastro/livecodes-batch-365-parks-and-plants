
<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Add a tag for <%= @plant.name %></h2>

      <%= simple_form_for([@plant, @plant_tag]) do |f| %>
        <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, class: 'select2' }, include_hidden: false %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
